

runId="$1"


cmd() {

    local title="$1"
    shift

    echo "watch -n 1 -t -d 'echo -- $title --; echo; $@'"
}


tmux new-session                "$(cmd 'Pods'           kubectl get pods  )"    \;    \
     split-window -v -p 20      "$(cmd 'Wes status'     ./status "$runId" )"    \;    \
     select-pane -U                                                             \;    \
     split-window -h            "$(cmd "TESK tasks"     teskTasks         )"    \;    \
     attach


